name: common
version: 0.1
cabal-version: >= 1.2
build-type: Simple

library
  hs-source-dirs: src
  build-depends: aeson
               , aeson-gadt-th
               , base
               , constraints-extras
               , dependent-sum-template
               , mtl
               , obelisk-route
               , text
               , vessel
  exposed-modules:
    Common.Api
    Common.Route
  ghc-options: -Wall -Wredundant-constraints -Wincomplete-uni-patterns -Wincomplete-record-updates -O -fno-show-valid-hole-fits
